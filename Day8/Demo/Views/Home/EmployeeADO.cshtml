@model IEnumerable<WebApplication1.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "員工清單 (ADO.NET)";
}

<h2 class="mb-3">員工清單 (ADO.NET)</h2>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-info">@TempData["Msg"]</div>
}
@if (TempData["DownloadLink"] != null)
{
    <div class="alert alert-success">
        PDF 已建立：
        <a href="@TempData["DownloadLink"]" target="_blank" download>下載 Employee.pdf</a>
    </div>
}
@if (TempData["DownloadLinkExcel"] != null)
{
    <div class="alert alert-success">
        Excel 已建立：
        <a href="@TempData["DownloadLinkExcel"]" target="_blank" download>下載 Employee.xlsx</a>
    </div>
}

<div class="mb-3 d-flex gap-2">
    <a asp-controller="Home" asp-action="EmployeeCreate" class="btn btn-primary">新增員工</a>

    <form asp-controller="Home" asp-action="EmployeeExportPdf" method="post" class="d-inline">
        <button type="submit" class="btn btn-outline-secondary">轉出 PDF</button>
    </form>
    <form asp-controller="Home" asp-action="EmployeeExportExcel" method="post" class="d-inline">
        <button type="submit" class="btn btn-outline-success">轉出 Excel</button>
    </form>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>員工編號</th>
            <th>姓名</th>
            <th>出生年月日</th>
            <th>薪資</th>
            <th style="width: 180px;">操作</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@(item.Birthdate?.ToString("yyyy-MM-dd"))</td>
                    <td>@item.Salary</td>
                    <td>
                        <a asp-controller="Home" asp-action="EmployeeEdit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">編輯</a>
                        <form asp-controller="Home" asp-action="EmployeeDelete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('確認刪除？');">
                            <button type="submit" class="btn btn-sm btn-danger">刪除</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center">沒有資料</td></tr>
        }
    </tbody>
</table>