@model IEnumerable<WebDemo.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee List";
}

<h2>員工列表</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">目前沒有員工資料。</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Birthdate</th>
                    <th class="text-end">Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Birthdate.ToString("yyyy-MM-dd")</td>
                        <td class="text-end">@item.Salary</td>
                        <td>
                            <input type="button" value="Edit" class="btn btn-sm btn-primary me-2" />
                            <input type="button" value="Delete" class="btn btn-sm btn-primary me-2" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}